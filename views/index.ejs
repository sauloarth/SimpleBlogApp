<% include partials/header %>
<h1>Blogs</h1>

<% blogs.forEach(blog => { %>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>">
    <span><%= blog.created.toDateString() %></span>
    <p><%= blog.body.substring(0, 100) %> ...</p>
    <a href="/blogs/<%= blog._id %>">See the blog</a>
    
<% }) %>

<% include partials/footer %>