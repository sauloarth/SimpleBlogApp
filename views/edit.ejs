<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Editing <%= blogToEdit.title %></div>
    <form class="ui form" action="/blogs/<%= blogToEdit._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blogToEdit.title %>">
        </div>
        <div class="field">
            <label>URL Image</label>
            <input type="text" name="blog[image]" value="<%= blogToEdit.image %>">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]" required><%= blogToEdit.body %></textarea>
        </div>
        <input class="ui violet basic big button" type="submit">
    </form>
</div>

<% include partials/footer %>